<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/design_default_color_on_primary</item>
        <item name="colorPrimaryDark">@color/design_default_color_primary_dark</item>
        <item name="colorAccent">@color/design_default_color_secondary</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <style name="ButtonNumberPad" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">34sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:background">@drawable/background_btn_number_pad</item>
    </style>
    <style name="ButtonOperation" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">34sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:background">@drawable/background_btn_op</item>
    </style>
    <style name="ButtonDelete" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">#00ACC1</item>
        <item name="android:textSize">34sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:background">@drawable/background_btn_delete</item>
    </style>
    <style name="TextViewDisplay">
        <item name="android:textSize">34sp</item>
        <item name="android:gravity">center_vertical|right</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/red</item>
    </style>

</resources>